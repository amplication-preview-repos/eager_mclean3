datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Game {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  players     Player[]
  status      String?
  title       String?
  updatedAt   DateTime @updatedAt
}

model Question {
  correctAnswer String?
  createdAt     DateTime @default(now())
  id            String   @id @default(cuid())
  options       String?
  text          String?
  updatedAt     DateTime @updatedAt
}

model Player {
  createdAt DateTime @default(now())
  game      Game?    @relation(fields: [gameId], references: [id])
  gameId    String?
  id        String   @id @default(cuid())
  score     Int?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  players   Player[]
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
